@model EDCFinans.Models.Finans.Maas
@inject EDCFinans.Models.Provider.IEDCFinansServiceProvider  serviceProvider
@{
    ViewData["Title"] = "Maas_Ekle";
    var personelListesi = new SelectList(await serviceProvider.PersonelListele(), "Id", "Ad");
}

<h1>Maas_Ekle</h1>

<h4>Maas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Maas_Ekle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Personel" class="control-label"></label>
                <select asp-for="PersonelId" class="form-control" asp-items="@personelListesi">
                    <option value="0">Personel Seçiniz</option>
                </select>
                <span asp-validation-for="PersonelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrutMaas" class="control-label"></label>
                <input asp-for="BrutMaas" class="form-control" />
                <span asp-validation-for="BrutMaas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetMaas" class="control-label"></label>
                <input asp-for="NetMaas" class="form-control" />
                <span asp-validation-for="NetMaas" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Durum" /> @Html.DisplayNameFor(model => model.Durum)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
