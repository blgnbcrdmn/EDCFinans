@model IEnumerable<EDCFinans.Models.Finans.Maas>

@{
    ViewData["Title"] = "Maas_Listeleme";
}

<h1>Maas_Listeleme</h1>

<p>
    <a asp-action="Maas_Ekle">Yeni Kayıt</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrutMaas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetMaas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Durum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonelId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrutMaas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetMaas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durum)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Maas_Duzenle", new { id=item.Id }) |
                @Html.ActionLink("Durum Değiştir", "Maas_DurumDegistir", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
