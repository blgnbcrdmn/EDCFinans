@model IEnumerable<EDCFinans.Models.Finans.Fatura>

@{
    ViewData["Title"] = "Fatura_Listeleme";
}

<h1>Fatura_Listeleme</h1>

<p>
    <a asp-action="Fatura_Ekle">Yeni Kayıt</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaturaNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sirket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaturaTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kdv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToplamFiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParaBirimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Durum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaturaNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sirket.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaturaTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kdv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToplamFiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParaBirimi.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durum)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Fatura_Duzenle", new { id=item.Id }) |
                @Html.ActionLink("Durum Değiştir", "Fatura_DurumDegistir", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
