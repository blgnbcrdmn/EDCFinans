@model EDCFinans.Models.Finans.GelirGider
@inject EDCFinans.Models.Provider.IEDCFinansServiceProvider  serviceProvider
@{
    ViewData["Title"] = "GelirGider_Ekle";
    var gelirGiderTurleri = new SelectList(await serviceProvider.GelirGiderTuruListele(), "Id", "Ad");
    var faturalar = new SelectList(await serviceProvider.FaturaListele(), "Id", "FaturaNo");
}

<h1>GelirGider_Ekle</h1>

<h4>GelirGider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GelirGider_Ekle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GelirGiderTuru" class="control-label"></label>
                <select asp-for="GelirGiderTurId" class="form-control" asp-items="@gelirGiderTurleri">
                    <option value="0">Seçiniz</option>
                </select>
                <span asp-validation-for="GelirGiderTurId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fatura" class="control-label"></label>
                <select asp-for="FaturaId" class="form-control" asp-items="@faturalar">
                    <option value="0">Seçiniz</option>
                </select>
                <span asp-validation-for="FaturaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label"></label>
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Durum" /> @Html.DisplayNameFor(model => model.Durum)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
