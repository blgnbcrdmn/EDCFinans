@model IEnumerable<EDCFinans.Models.Finans.Siparis>

@{
    ViewData["Title"] = "Siparis_Listeleme";
}

<h1>Siparis_Listeleme</h1>

<p>
    <a asp-action="Siparis_Ekle">Yeni Kayıt</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaturaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SiparisDurumId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CikisDepoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GirisDepoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Durum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaturaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiparisDurumId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CikisDepoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GirisDepoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durum)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Siparis_Duzenle", new {  id=item.Id }) |
                @Html.ActionLink("Durum Değiştir", "Siparis_DurumDegistir", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
